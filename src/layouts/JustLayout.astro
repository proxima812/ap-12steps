---
import Analytics from '@/components/Analytics.astro'
import SEOHead from "@/components/SEOHead.astro"
import { getLangFromUrl } from "@/i18n/utils"

import "@/styles/tailwind.css"

const { datePublished, dateModified, noIndex, title, description, type, ogImage } =
	Astro.props

const lang = getLangFromUrl(Astro.url)
---

<html lang={lang} class="scroll-smooth h-full">
	<head>
		<SEOHead
			noIndex={noIndex}
			title={title}
			description={description}
			type={type}
			ogImage={ogImage}
			datePublished={datePublished}
			dateModified={dateModified}
		/>
    <Analytics />
	</head>
	<body
		class="relative scroll-m-4 w-full min-h-screen h-full bg-zinc-950 text-white font-sans"
	>
		<slot />
	</body>
</html>
